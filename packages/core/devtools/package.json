{
  "name": "@abstractflo/atlas-devtools",
  "version": "1.0.0",
  "description": "> TODO: description",
  "author": "Florian Uhlrich <f.uhlrich@abstractmedia.de>",
  "homepage": "",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.esm.js"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "microbundle --no-sourcemap --format=cjs,esm --no-compress",
    "postbuild": "yarn types && rimraf ./dist/packages && yarn local:pack",
    "prewatch": "yarn clean",
    "watch": "microbundle watch --no-sourcemap --format=cjs,esm --no-compress",
    "clean": "rimraf {dist,build,types,*.d.ts,*.tgz}",
    "types": "api-extractor run --local --verbose",
    "local:pack": "yarn pack --filename devtools.tgz"
  },
  "dependencies": {
    "@abraham/reflection": "^0.8.0",
    "@swc/core": "^1.2.64",
    "cfg-reader": "^2.0.0",
    "change-case": "^4.1.2",
    "colorette": "^1.2.2",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "fs-jetpack": "^4.1.0",
    "import-meta-resolve": "^1.1.1",
    "js-yaml": "^4.1.0",
    "jscodeshift": "^0.13.0",
    "microbundle": "^0.13.3",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/ejs": "^3.0.7",
    "@types/js-yaml": "^4.0.2"
  }
}
