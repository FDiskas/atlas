{
  "name": "@abstractflo/atlas-plugin-typeorm",
  "version": "1.0.0",
  "description": "> TODO: description",
  "author": "Florian Uhlrich <f.uhlrich@abstractmedia.de>",
  "homepage": "",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.esm.js"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "microbundle --no-sourcemap --format=cjs,esm --no-compress",
    "postbuild": "yarn types && rimraf ./dist/packages && yarn local:pack",
    "prewatch": "yarn clean",
    "watch": "microbundle watch --no-sourcemap --format=cjs,esm --no-compress",
    "clean": "rimraf {dist,build,types,*.d.ts,*.tgz}",
    "types": "api-extractor run --local --verbose",
    "local:pack": "yarn pack --filename plugin-typeorm.tgz"
  },
  "peerDependencies": {
    "@abstractflo/atlas-shared": "^3.1.0",
    "@abstractflo/atlas-devtools": "^3.1.0"
  },
  "devDependencies": {
    "@abstractflo/atlas-shared": "*",
    "@abstractflo/atlas-devtools": "*"
  },
  "dependencies": {
    "typeorm": "^0.2.36"
  }
}
